#include "Floor.hlsli"

////////////////////////////////////////////////////////////////////////////////////////////
// PSOutput structure
////////////////////////////////////////////////////////////////////////////////////////////
struct PSOutput {
	float4 color : SV_TARGET0;
};

////////////////////////////////////////////////////////////////////////////////////////////
// ConstantBuffers
////////////////////////////////////////////////////////////////////////////////////////////
struct Material {
	float4 color;
};
ConstantBuffer<Material> gMaterial : register(b0);

////////////////////////////////////////////////////////////////////////////////////////////
// メイン
////////////////////////////////////////////////////////////////////////////////////////////
PSOutput main(GSOutput input) {
	
	PSOutput output;
	
	output.color = input.color * gMaterial.color;
	
	if (output.color.a == 0.0f) {
		discard;
	}
	
	return output;
}